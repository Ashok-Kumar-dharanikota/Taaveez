<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:id="@+id/CVMain"
    android:layout_margin="8dp"
    app:cardCornerRadius="22dp"
    app:strokeWidth="6dp"
    android:elevation="700dp"
    app:strokeColor="@color/black"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintLeft_toRightOf="@+id/tvtextTopic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvtextTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Power Of Art!" />

        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxWidth="200dp"
            android:layout_marginLeft="17dp"
            android:textColor="@color/black"
            android:maxLines="2"
            android:maxLength="40"
            android:text="A beautiful body perishes,\nbut a work of art dies not. ..."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/img"
            app:layout_constraintTop_toBottomOf="@+id/tvtextTopic" />

        <TextView
            android:id="@+id/readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note"
            android:text="Read More..."
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="17dp"
            app:layout_constraintRight_toLeftOf="@+id/img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/readmore"
            android:layout_margin="17dp"
            android:text="12 Jun 2023"
            android:textColor="#FF332BFF"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ivShare"
            app:layout_constraintTop_toBottomOf="@+id/readmore" />


        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="17dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tvDate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>





